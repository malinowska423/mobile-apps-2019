<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome! Choose player:"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"/>
    <Button
            android:text="X"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonX" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:onClick="choosePlayer" android:layout_marginTop="80dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="O"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonO" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:onClick="choosePlayer" android:layout_marginTop="80dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Start again"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button4" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="newGame"/>
    <TableLayout
            android:layout_width="0dp"
            android:layout_height="0dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="150dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/button4" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/board">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="5" tools:layout_editor_absoluteY="150dp"
                    tools:layout_editor_absoluteX="8dp">
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/game_btn_0" android:layout_weight="1"
                        android:onClick="pickMove"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/game_btn_1" android:layout_weight="1"
                        android:onClick="pickMove"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/game_btn_2" android:layout_weight="1"
                        android:onClick="pickMove"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/game_btn_3" android:layout_weight="1"
                        android:onClick="pickMove"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/game_btn_4" android:layout_weight="1"
                        android:onClick="pickMove"/>
            </LinearLayout>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="5" tools:layout_editor_absoluteY="150dp"
                    tools:layout_editor_absoluteX="8dp">
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/game_btn_5" android:layout_weight="1"
                        android:onClick="pickMove"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/game_btn_6" android:layout_weight="1"
                        android:onClick="pickMove"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/game_btn_7" android:layout_weight="1"
                        android:onClick="pickMove"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/game_btn_8" android:layout_weight="1"
                        android:onClick="pickMove"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/game_btn_9" android:layout_weight="1"
                        android:onClick="pickMove"/>
            </LinearLayout>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="5" tools:layout_editor_absoluteY="150dp"
                    tools:layout_editor_absoluteX="8dp">
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/game_btn_10" android:layout_weight="1"
                        android:onClick="pickMove"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/game_btn_11" android:layout_weight="1"
                        android:onClick="pickMove"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/game_btn_12" android:layout_weight="1"
                        android:onClick="pickMove"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/game_btn_13" android:layout_weight="1"
                        android:onClick="pickMove"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/game_btn_14" android:layout_weight="1"
                        android:onClick="pickMove"/>
            </LinearLayout>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="5"
                    tools:layout_editor_absoluteY="150dp"
                    tools:layout_editor_absoluteX="8dp">
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/game_btn_15" android:layout_weight="1"
                        android:onClick="pickMove"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/game_btn_16" android:layout_weight="1"
                        android:onClick="pickMove"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/game_btn_17" android:layout_weight="1"
                        android:onClick="pickMove"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/game_btn_18" android:layout_weight="1"
                        android:onClick="pickMove"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/game_btn_19" android:layout_weight="1"
                        android:onClick="pickMove"/>
            </LinearLayout>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="5" tools:layout_editor_absoluteY="150dp"
                    tools:layout_editor_absoluteX="8dp">
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/game_btn_20" android:layout_weight="1"
                        android:onClick="pickMove"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/game_btn_21" android:layout_weight="1"
                        android:onClick="pickMove"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/game_btn_22" android:layout_weight="1"
                        android:onClick="pickMove"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/game_btn_23" android:layout_weight="1"
                        android:onClick="pickMove"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/game_btn_24" android:layout_weight="1"
                        android:onClick="pickMove"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>